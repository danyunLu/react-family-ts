{
    "compilerOptions": {
        // "baseUrl": "./",
        // "paths": {
        //     "pages": ["src/pages"],
        //     "components": ["src/components"],
        //     "router": ["src/router"],
        //     "actions": ["src/redux/actions"],
        //     "reducers": ["src/redux/reducers"],
        //     "mock": ["mock"]
        // },
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "allowJs": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "noEmitHelpers": false,
        "lib": ["es5", "dom", "es2017", "es6", "es2015", "es7"]
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "emitRequireType": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}